<% provide(:title, "Edit topic") %>

<div class="container">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <h1 class="breadcrumb">Edit topic</h1>
    <%= form_for (@topic) do |f| %>
        <%= render 'shared/error_topic_messages' %>

        <%= f.label :title, "Title" %>
        <%= f.text_field :title, class: "form-control" %>

        <%= f.label :content, "Content" %>
        <%= f.cktext_area :content, class: "form-control" %>

        <br>
        <div class="col-md-4"><%= f.submit "Edit topic", class: "btn btn-primary" %></div>
    <% end %>
  </div>
<div class="col-md-2"></div>
</div>